xml.server_list() do
  for s in @bz_servers do
    xml.bz_server do
      xml.server_host(s.server_host.hostname)
      xml.port(s.port)
      xml.map_name(s.map_name)
      xml.last_chat_at(s.last_chat_at)
      xml.last_filtered_chat_at(s.last_filtered_chat_at)
      xml.special_test_field_just_for_tanner()
    end
  end
end