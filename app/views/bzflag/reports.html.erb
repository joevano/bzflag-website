<h1>Reports</h1>
<table class="reports">
<caption>Last <%= @reports.size %> Reports</caption>
<tr>
  <th>#</th>
  <th>Date</th>
  <th>Server</th>
  <th>By</th>
  <th>Detail</th>
</tr>
<% @reports.each_index do |i| %>
  <% rpt = @reports[i] %>
  <tr class="rpt">
    <td><%= i + 1 %> </td>
    <td><%= display_date(rpt.logged_at) %></td>
    <td><%= rpt.bz_server.server_host.hostname + ':' + rpt.bz_server.port.to_s %></td>
    <td><%= rpt.callsign.name %></td>
    <td><%= rpt.message.text %></td>
  </tr>
<% end -%>
</table>
