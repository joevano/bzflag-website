<h1>Players</h1>
<table>
  <tr>
    <td><%= number_with_delimiter(@num_callsigns) %> Callsigns</td>
    <td><%= number_with_delimiter(@num_ips) %> IPs</td>
    <td><%= number_with_delimiter(@num_player_connections) %> Player Connections</td>
    <td><%= number_with_delimiter(@num_log_messages) %> Log Messages</td>
    <td><%= number_with_delimiter(@num_messages) %> Unique Messages</td>
  </tr>
  <tr>
    <td colspan=5>Last Log Processed: <%= @lastlog && @lastlog.bz_server.server_host.hostname %>:<%= @lastlog && @lastlog.bz_server.port %> &nbsp; <%= @lastlog && @lastlog.log_type.token %> &nbsp; <%= @lastlog && @lastlog.logged_at %> </td>
  </tr>
</table>

<div>
  <fieldset>
    <legend>Enter Player Search Criteria</legend>
    <% form_for :search do |form| %>
      <p><label for="search_for">Search For:</label>
         <%= form.text_field :search_for, :size => 30 %>
         <%= form.select :search_by, @search_options %>
         <%= submit_tag "Search" %>
      </p>
    <% end %>
  </fieldset>
</div>

<div>
<% if @results %>
     <table>
<%   @results.each do |rslt| %>
     <tr>
     <td><%= rslt %></td>
     </tr>
<%   end %>
     </table>
<% end %>
</div>
