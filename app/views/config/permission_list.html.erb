<h1>Group Permissions</h1>

<% form_for :group do |form| %>
<table>
  <tr>
    <th>Group Name</th>
    <%= render(:partial => "permission", :collection => @permissions) %>
  </tr>
  <% @groups.each do |grp| -%>
  <tr>
    <td><%= grp.name %></td>
    <% @permissions.each do |p| -%>
    <td><%= check_box_tag "grp[#{grp.id}][#{p.name}]" %> </td>
    <% end -%>
  </tr>
  <% end -%>
</table>

<%= button_to :Save %>
<% end %>
